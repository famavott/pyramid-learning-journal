{% extends "layout.jinja2" %}

{% block content %}
<div class = "row">
    <form method="POST" id="detail-page">
        <div class="col-md-10">
            <div class="row pager-row">
            </div>
        <div class="row entry-row">
            <h5 class="author-name">{{ entry.title }}</h5>
            <h6 class="date">{{ entry.created }}
            <hr></hr>
            <div class="ind-post-body">{{ entry.text }}</div>
        </div>
        <div class="form-group">
        <a class="btn btn-secondary" href="{{ request.route_url('edit', id=entry.id) }}">Edit Post</a>
        <a id="delete-post" href="{{ request.route_url('delete', id=entry.id) }}">Delete Post</a>
        </div>
        </div>
    </form>
</div>
{% endblock %}