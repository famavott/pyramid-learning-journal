{% extends "layout.jinja2" %}

{% block content %}
<div class = "row">
    <div class="col-md-10">
        <div class="row pager-row">
        </div>
    <div class="row entry-row">
        <h4 class="author-name">{{ entry.author.display_name }}</h4>
        <h6 class="date">{{ entry.created }}
        <div class="ind-post-body">{{ entry.text }}</div>
    </div>
    <div class="form-group">
    <a href="{{ request.route_url('edit', id=entry.id) }}">Edit Post</a>
    </div>
    </div>
</div>
{% endblock %}