{% extends "layout.jinja2" %}

{% block content %}
<div class = "row" id="detail-entry">
    <div class="form-group">
        <label class="input-header">Post Title</label>
        <input type="text" id="input-title" value="{{ entry.title }}">
        <div class="form">
            <label class="input-header">Entry</label>
            <textarea id="input-text" value="{{ entry.text }}"></textarea>
        </div>
    </div>
    <div class="form-group">
        <input type="button" class="btn btn-default" value="Update">
    </div>
</div>
{% endblock %}