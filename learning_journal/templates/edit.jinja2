{% extends "layout.jinja2" %}

{% block content %}
<form method="POST">
    <div class="row">
        <div class="form-group">
            <input type="text" id="input-title" name="title" value="{{ entry.title }}">
        </div>
        <div class="form">
            <textarea name="body" type="text" rows=20 cols=60>{{ entry.text }}</textarea>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default"/>
        </div>
    </div>
</form>
{% endblock %}