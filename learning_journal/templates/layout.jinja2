<!DOCTYPE html>
<head>
    <title>Matt Favoino's 401 Journal</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="{{ request.static_path('learning_journal:static/style.css') }}" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
    <header class="container-fluid row">
        <div class="nav-link">
            <a href="{{ request.route_url('home') }}">Matt's 401 Learning Journal</a>
        </div>
    </header>
    <ul class="nav nav-tabs">
        <li class="navs">
            <a href="{{ request.route_url('home') }}">Home</a>
        </li>
        {% if request.authenticated_userid %}
        <li>
            <a href="{{ request.route_url('create') }}">New</a>
        </li>
        <li>
            <a href="{{ request.route_url('logout') }}">Logout</a>
        </li>
        {% else %}
        <li>
            <a href="{{ request.route_url('login') }}">Login</a>
        </li>
        {% endif %}
    </ul>
    <main class="container">
        {% block content %}{% endblock %}
    </main>
</body>
</html>