{% extends "layout.jinja2" %}

{% block content %}
<div class = "row" id="detail-entry">
    <form method="POST">
        <div class="form-group">
            <input type="hidden" name="csrf_token" value="{{request.session.get_csrf_token() }}" />
            <input type="text" id="input-title" placeholder="Title" name="title">
        </div>
        <div class="form">
            <textarea id="input-text" rows=20 cols=60 name='text' placeholder="{{ textarea }}"></textarea>
        </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default"/>
        </div>
    </form>
</div>
{% endblock %}