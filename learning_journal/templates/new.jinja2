{% extends "layout.jinja2" %}

{% block content %}
<div class = "row" id="detail-entry">
    <form method="POST">
        <div class="form-group">
            <label class="input-header">Post Title</label>
            <input type="text" id="input-title" placeholder="Title" name="title">
            <div class="form">
                <label class="input-header">New Entry</label>
                <textarea id="input-text" name='text' placeholder="{{ textarea }}"></textarea>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-default"/>
        </div>
    </form>
</div>
{% endblock %}